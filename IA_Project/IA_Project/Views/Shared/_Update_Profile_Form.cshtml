@model IA_Project.ViewModels.ProjectsUsersModel
<div class="col-md-12">
    <form id="Form-Update-Profile">
        <div class="form-group row">
            <label for="name" class="col-4 col-form-label">First Name</label>
            <div class="col-8">
                <input value="@Model.Actor.FNAME" id="name" name="name" placeholder="First Name" class="form-control here" type="text">
            </div>
        </div>
        <div class="form-group row">
            <label for="lastname" class="col-4 col-form-label">Last Name</label>
            <div class="col-8">
                <input value="@Model.Actor.LNAME" id="lastname" name="lastname" placeholder="Last Name" class="form-control here" type="text">
            </div>
        </div>

        <div class="form-group row">
            <label for="lastname" class="col-4 col-form-label">Photo</label>
            <div class="col-8">
                <input id="photo" name="photo" class="form-control here" type="file">
            </div>
        </div>

        <div class="form-group row">
            <label for="email" class="col-4 col-form-label">Email*</label>
            <div class="col-8">
                <input value="@Model.Actor.EMAIL" id="email" name="email" placeholder="Email" class="form-control here" required="required" type="text">
            </div>
        </div>
        <div class="form-group row">
            <label for="mobile" class="col-4 col-form-label">Mobile Number</label>
            <div class="col-8">
                <input value="@Model.Actor.MOBILE" id="mobile" name="mobile" placeholder="mobile" class="form-control here" type="text">
            </div>
        </div>
        <div class="form-group row">
            <label for="publicinfo" class="col-4 col-form-label">Job Description</label>
            <div class="col-8">
                <textarea value="@Model.Actor.JOB_DESC" id="publicinfo" name="publicinfo" cols="40" rows="4" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <label for="newpass" class="col-4 col-form-label">New Password</label>
            <div class="col-8">
                <input value="@Model.Actor.PASSWORD" id="newpass" name="newpass" placeholder="New Password" class="form-control here" type="text">
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-4 col-8">
                <button name="button" id="open-update-form" onclick="UpdateProfile()" type="button" class="btn btn-primary">Update My Profile</button>
            </div>
        </div>
    </form>
</div>