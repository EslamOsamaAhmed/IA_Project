
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="home-section">
    <div class="home-wrap">
        <div class="project-forms"></div><!--project-forms-->
    </div><!--home-wrap-->
</section><!--homw-section-->
<section class="home-project">
    <div class="projects-wrap">
    </div><!--projects-wrap-->
</section><!--home-project-->
<div class="container">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#login-modal">Login</button>

    <div class="modal fade " data-backdrop="static" data-keyboard="false" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="login-maodal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered login-maodal" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-login-header">Sign in</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="login-form">
                        <div class="form-group">
                            <!----<label for="login-name" class="col-form-label">Name:</label>-->
                            <input type="text" class="form-control login-input input-cust" placeholder="Email" id="login-name">
                        </div>
                        <div class="form-group">
                            <!----<label for="login-pass" class="col-form-label">Password:</label>-->
                            <input type="password" class="form-control login-input input-cust" placeholder="Password" id="login-pass">
                        </div>
                    </form>
                    <div class="forgot-pass">
                        <a href=""> <button id="login-forgot-pass" class="login-forgot-pass">Forgot Password</button></a>
                    </div><!--forgot-pass-->
                    <div class="sign-btn form-group">
                        <button class="sign-in btn">sgin in</button>
                    </div><!--sign--->
                </div><!--modal-body-->
                <div class="modal-footer">
                    <span id="login-footer-span" class="">
                        Don't have an account?
                        <a class="register-switch">Create Account</a>
                    </span>
                </div><!--modal-footer-->
            </div><!--modal-content-->
        </div><!--modal-dialog-->
    </div><!--modal-->
</div><!--container-->

    <div class="col-md-9">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <h1>Project Form</h1>
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <form>
                            <div class="form-group row">
                                <label for="name" class="col-4 col-form-label">Project Name</label>
                                <div class="col-8">
                                    <input id="name" name="text" placeholder="Name" class="form-control here" required="required" type="text">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="text" class="col-4 col-form-label">Description of your Project</label>
                                <div class="col-8">
                                    <textarea id="text" name="text" rows="10" cols="30" placeholder="Desc" class="form-control here" required="required" type="text"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="name" class="col-4 col-form-label">Start Time</label>
                                <div class="col-8">
                                    <input id="name" name="text" placeholder="DD/MM/YY" class="form-control here" required="required" type="text">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="name" class="col-4 col-form-label">End Time</label>
                                <div class="col-8">
                                    <input id="name" name="text" placeholder="DD/MM/YY" class="form-control here" required="required" type="text">
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-4 col-8">
                                    <button name="submit" type="submit" class="btn btn-primary">Add</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
    @Html.Partial("_footer")
