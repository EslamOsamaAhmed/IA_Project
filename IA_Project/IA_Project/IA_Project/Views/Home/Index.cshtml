
@section Scripts{

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}
@model IA_Project.ViewModels.ProjectsUsersModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="home-section">
    <div class="home-wrap">

        <header>
            <div class="header-wrap">

                <div class="container">


                    <div class="modal fade " data-backdrop="static" data-keyboard="false" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="login-maodal" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered login-maodal" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="modal-login-header">Sign in</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="tab-content" id="nav-tabContent">
                                        <div class="login-wrap tab-pane show active" role="tabpanel" id="login-controll">
                                            <form id="loginForm">
                                                <div class="form-group">
                                                    <!----<label for="login-name" class="col-form-label">Name:</label>-->
                                                    <input type="text" class="form-control login-input input-cust emvalid" placeholder="Email" id="login-name"
                                                           name="loginEmail" required>
                                                    <label id="eminvalid">Email is Incorret</label>
                                                </div>
                                                <div class="form-group">
                                                    <!----<label for="login-pass" class="col-form-label">Password:</label>-->
                                                    <input type="password" class="form-control login-input input-cust pasvalid" placeholder="Password" id="login-pass"
                                                           name="loginPass" required>
                                                    <label id="passinvalid">Password is Incorret</label>
                                                </div>
                                                <div class="forgot-pass">
                                                    <button id="login-forgot-pass" class="login-forgot-pass" type="button" name="forgot-btn">Forgot Password</button>
                                                </div><!--forgot-pass-->
                                                <div class="sign-btn form-group">
                                                    <button class="sign-in btn" type="button" name="sign-in" id="login">SIGN IN</button>
                                                </div>
                                            </form>

                                            <form id="ResetPass">
                                                <div class="form-group">
                                                    <!----<label for="login-name" class="col-form-label">Name:</label>-->
                                                    <input type="text" class="form-control login-input input-cust" placeholder="Email to Send The Code" id="emailreset"
                                                           name="emailreset" required />
                                                    <label id="emailinvalid">Email is Incorret</label>

                                                    <div class="sign-btn form-group">
                                                        <button class="sendmail sign-in btn" type="button" name="sendmail" id="sendmail">Send Mail</button>
                                                    </div>
                                                </div>
                                            </form>

                                            <form id="codereset">
                                                <div class="form-group">
                                                    <input type="text" class="form-control login-input input-cust" placeholder="Code to Reset" id="coderes"
                                                           name="coderes" required>
                                                    <input type="text" class="form-control login-input input-cust d-none" placeholder="Email to Send The Code" id="emailf"
                                                           name="emailf" required />

                                                    <label id="codeinvalid">Code is Incorrect</label>
                                                    <label id="timelate">Time to Enter Code is Out</label>

                                                    <label id="resendcode">Code is Sent</label>

                                                    <div class="sign-btn form-group reset-cont col-12">
                                                        <button class="resetpass sign-in btn col-6" type="button" name="resetpass" id="resetpass">Reset Password</button>

                                                        <button class="resetpass sign-in btn col-6" type="button" name="resend" id="resend">Resend Code</button>
                                                    </div>
                                                </div>
                                            </form>

                                            <form id="passreset">
                                                <div class="form-group">
                                                    <input type="password" class="form-control login-input input-cust" placeholder="Enter New Password" id="newpass"
                                                           name="newpass" required>
                                                    <input type="text" class="form-control login-input input-cust d-none" id="emailff"
                                                           name="emailff" required />

                                                    <div class="sign-btn form-group">
                                                        <button class="upassword sign-in btn" type="button" name="upassword" id="upassword">Update Password</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div><!--login-wrap-->

                                        <div class="register-wrap tab-pane" role="tabpanel" id="register-controll">
                                            <!-- <form id = "register-form"> -->
                                            <form id="register-form">
                                                <div class="form-group">
                                                    <input type="text" class="form-control input-cust" id="fname" name="fname" placeholder="First Name" required>
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" class="form-control input-cust" id="lname" name="lname" placeholder="Last Name" required>
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" class="form-control input-cust" id="mobile" name="mobile" placeholder="Phone Number" required>

                                                </div>
                                                <div class="form-group">
                                                    <input type="email" class="form-control input-cust" id="email" name="email" placeholder="email" required>
                                                    <label id="emailinvalidr">Email is Already Taken</label>
                                                </div>
                                                <div class="form-group">
                                                    <select name="role" class="form-control input-cust">
                                                        <option value="Marketing Director" selected>Marketing Director</option>
                                                        <option value="Team Leader">Team Leader</option>
                                                        <option value="Team Trainee">Team Trainee</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <input type="text" class="form-control input-cust" id="username" name="username" placeholder="username" required>
                                                    <label id="unameinvalid">Username is Already Taken</label>
                                                </div>
                                                <div class="form-group">
                                                    <input type="password" class="form-control input-cust" id="password" name="password" placeholder="Password" required>
                                                </div>
                                                <div class="form-group">
                                                    <input type="file" class="form-control input-cust" id="photo" name="photo" placeholder="Photo" required>
                                                </div>
                                                <div class="form-group">
                                                    <textarea class="form-control input-cust" id="jobdesc" rows="4" name="jobdesc" placeholder="Job Descrption" required></textarea>
                                                </div>
                                                <div class="register-btn form-group">
                                                    <button class="register btn" type="button" name="register" id="register">Register</button>
                                                </div><!--register--->
                                                <!--</form>-->
                                            </form>
                                        </div><!--register-->
                                    </div><!--tab-content-->
                                </div><!--modal-body-->
                                <div class="modal-footer">
                                    <div class="list-group" id="list-tab" role="tablist">
                                        <a class="login-switch" data-toggle="list" href="#register-controll" role="tab" aria-controls="register">
                                            <span id="login-footer-span" class="modal-Fspan">Don't have an account?</span>
                                            Create Account
                                        </a>


                                        <a class="register-switch active text-hide" data-toggle="list" href="#login-controll" role="tab" aria-controls="login">
                                            <span id="login-footer-span" class="modal-Fspan"> Already have an account?</span>
                                            Sign in
                                        </a>

                                    </div><!--list-group-->
                                </div><!--modal-footer-->
                            </div><!--modal-content-->
                        </div><!--modal-dialog-->
                    </div><!--modal-->
                </div><!--container-->
            </div><!--header-wrap-->

        </header>

        <div class="project-forms">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 home-desc">
                        <div class="home-h1">
                            <h1>Mangae Your Work Online</h1>
                        </div><!--home-h1-->
                        <div class="home-pragraph">
                            <p class="home-description">
                                The skills people and businesses need to succeed are changing. No matter
                                where you are in your career or what field you work in, you will need to understand the language of data.
                                With DataCamp, you learn data science today and apply it tomorrow.
                            </p>
                        </div><!--home-pragraph-->
                        <div class="home-sign_button">
                            <button type="button" class="btn btn-primary joinus-btn"
                                    data-toggle="modal" data-target="#login-modal">
                                Join us Now
                            </button>
                        </div><!--home-sign_button-->
                    </div><!--home-desc-->
                    <div class="col-md-6 projectForms-contain">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <h4>Create Your Project</h4>
                                        <hr>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <form id="Add_Project_form">
                                            <div class="form-group row">
                                                <div class="col-12">
                                                    @Html.TextBoxFor(m => m.project.NAME_PROJECT, new { @class = "form-control here", id = "project_name", name = "project_name", placeholder = "Project Name", type = "text" })
                                                    @Html.ValidationMessageFor(x => x.project.NAME_PROJECT)
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-12">
                                                    @Html.TextAreaFor(m => m.project.DESC_PROJECT, new { id = "des_project", name = "des_project", rows = "4", cols = "30", placeholder = "Project Description", @class = "form-control here", type = "text" })
                                                    @Html.ValidationMessageFor(x => x.project.DESC_PROJECT)
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <div class="col-12">
                                                    @Html.CheckBoxFor(m => m.project.P_STATUS, new { @class = "form-control here", id = "p_status" })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-12">
                                                    @Html.TextBoxFor(m => m.project.START_TIME, new { id = "start_time", name = "start_time", placeholder = "Start MM/DD/YY", @class = "form-control here", type = "text" })
                                                    @Html.ValidationMessageFor(x => x.project.START_TIME)
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-12">
                                                    @Html.TextBoxFor(m => m.project.END_TIME, new { id = "end_time", name = "end_time", placeholder = "End MM/DD/YY", @class = "form-control here", type = "text" })
                                                    @Html.ValidationMessageFor(x => x.project.END_TIME)
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-12">
                                                    @Html.TextBoxFor(m => m.project.PRICE, new { id = "price", name = "price", placeholder = "Project Cost", @class = "form-control here", type = "text" })
                                                    @Html.ValidationMessageFor(x => x.project.PRICE)
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-12">
                                                    <button name="Add_project" type="button" id="Add_project_button" class="btn btn-primary">Add</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div><!--row-->
            </div><!--container-->
        </div><!--project-forms-->
    </div><!--home-wrap-->
</section><!--homw-section-->
<section class="home-project">
    <div class="projects-wrap">
        <div class="container-fluid">
            <div class="row">
                <div class="projects-body col-lg-9">
                    <div id="heree" class="row"></div>
                </div><!--projects-body-->
                <aside class="side-nav col-lg-3">
                    <div class="sidenav-wrapper">
                        <div class="side-content">
                            <div class="home_user-img">
                                <img class="h-user-img" src="../images/user.jpg" />
                            </div><!--home_user-img-->
                            <label class="user-email-label">
                                @if (Session["Email"] != null)
                                {
                                    @Session["Email"]
                                }
                            </label>
                            <div class="home-filter">
                                <form class="search-form">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="home-search" placeholder="Search">
                                    </div>
                                </form>
                            </div><!--home-filter-->
                            <div class="side-ul">
                                <ul class="side-list-items">
                                    <div>
                                        <i class="fas fa-chevron-right"></i>
                                        <li><a href="@Url.Action("fprofile", "fprofile")">Dashboard</a></li>
